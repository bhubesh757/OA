#include <bits/stdc++.h>
using namespace std;

long long solution(vector<int> arr) {
    long long ans = 0;
    long long len = 0;

    for (int i = 0; i < arr.size(); i++) {
        if (i == 0) {
            len = 1;
        } else {
            // check alternating parity (safe for negatives)
            if ((arr[i] & 1) != (arr[i - 1] & 1)) {
                len++;
            } else {
                len = 1;
            }
        }
        ans += len;
    }
    return ans;
}

int main() {
    int n;
    cin >> n;

    vector<int> arr(n);
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << solution(arr) << endl;
    return 0;
}
